<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.website.sale</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="website.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <div id="website_info_settings" position="after">
                <h2>Bulk Order</h2>
                <div class="row mt16 o_settings_container" id="bulk_order">
                    <div class="col-12 col-lg-6 o_setting_box" id="product_bulk_order">
                        <div class="o_setting_left_pane">
                            <field name="product_bulk_order"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="product_bulk_order"/>
                        </div>
                    </div>

                </div>
            </div>
        </field>
    </record>
</odoo>
