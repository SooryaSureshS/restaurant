<?xml version="1.0" encoding="utf-8" ?>
<template id="saleAnalyticsTem">
    <t t-name="saleAnalytics">
        <div class="lowRowCont">
            <div class="row">
                <div class="col-lg-9">
                    <span class="lowRowHeads">Sales Analytics</span>
                </div>
                <div class="col-lg-3"/>
            </div>
            <div class="row">
                <div class="col-lg-4" style="position: relative;">
                    <canvas id="donutChart"
                            style="min-height: 100px; height: 100px; max-height: 100px; max-width: 100%;"></canvas>
                    <p class="donutCenter inner">
                        <span class="lrTcN">Total</span>
                        <br/>
                        <span class="lrTcB">$421</span>
                    </p>
                </div>
                <div class="col-lg-8 row">
                    <div class="col-lg-6 row">
                        <div class="donutLegendRect" style="background:#79D439;"/>
                        <div>
                            <span class="lrTcN">Online Sales</span>
                            <br/>
                            <span class="lrTcB">$700</span>
                            <br/>
                        </div>
                    </div>
                    <div class="col-lg-6 row">
                        <div class="donutLegendRect" style="background:#2baab6;"/>
                        <div>
                            <span class="lrTcN">Offline Sales</span>
                            <br/>
                            <span class="lrTcB">$500</span>
                            <br/>
                        </div>
                    </div>
                    <div class="col-lg-6 row">
                        <div class="donutLegendRect" style="background:#ED8A23;"/>
                        <div>
                            <span class="lrTcN">Agent Sales</span>
                            <br/>
                            <span class="lrTcB">$400</span>
                            <br/>
                        </div>
                    </div>
                    <div class="col-lg-6 row">
                        <div class="donutLegendRect" style="background:#F0B51B;"/>
                        <div>
                            <span class="lrTcN">Marketing Sales</span>
                            <br/>
                            <span class="lrTcB">$600</span>
                            <br/>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </t>
</template>