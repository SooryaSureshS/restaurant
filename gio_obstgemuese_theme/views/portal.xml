                            </input>
                            <div class="validation_error_password"/>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <button class="log_reg_btn email_change_save mt-4">Save
                            Changes
                        </button>
                    </div>
                </div>
            </div>
            <div class="change_password_container">
                <h3 class="GT_Pressura_Pro_Mono mt-5">Change Password</h3>
                <div class="row pb-5">
                    <div class="col-md-6">
                        <div class="form-group field-password">
                            <label class="log_reg_label GT_Pressura_Pro_Mono"
                                   for="new_email">Password
                            </label>
                            <input type="password" placeholder="new password"
                                   name="paswword"
                                   t-attf-class="form-control new_password login_input log_reg_input GT_Pressura_Pro_Mono"
                                   required="required"
                                   maxlength="4096">
                            </input>
                            <div class="validation_error_password"/>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group field-password">
                            <label class="log_reg_label GT_Pressura_Pro_Mono"
                                   for="password">Confirm new password
                            </label>
                            <input type="password" placeholder="Confirm new password"
                                   name="password"
                                   t-attf-class="form-control conf_new_password login_input log_reg_input GT_Pressura_Pro_Mono"
                                   required="required"
                                   maxlength="4096">
                            </input>
                            <div class="validation_error_password"/>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group field-password">
                            <label class="log_reg_label GT_Pressura_Pro_Mono"
                                   for="password">password
                            </label>
                            <input type="password" placeholder="password"
                                   name="password" id="password"
                                   t-attf-class="form-control curr_password_p login_input log_reg_input GT_Pressura_Pro_Mono"
                                   required="required"
                                   maxlength="4096">
                            </input>
                            <div class="validation_error_password"/>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <button class="log_reg_btn password_change_save mt-4">Save
                            Changes
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </template>

    <template id="portal_Address">
        <div id="address" class="tab_content">
            <div id="registration">
                <t t-call="gio_obstgemuese_theme.obst_my_account_partner_address"/>
            </div>
        </div>
    </template>

    <template id="my_account_edit_add_address_template">
        <div class="form-row">
            <div t-attf-class="form-group  col-lg-12 div_name d-none">
                <input type="hidden" name="partner_id"
                       t-attf-class="GT_Pressura_Pro_Mono log_reg_input form-control" t-att-value="partner.id"/>
            </div>
            <div t-attf-class="form-group  col-lg-12 div_name">
                <label class="col-form-label log_reg_label GT_Pressura_Pro_Mono"
                       for="name">Name
                </label>
                <input type="text" name="name"
                       t-attf-class="GT_Pressura_Pro_Mono log_reg_input form-control" t-att-value="partner.name"/>
            </div>
            <div class="w-100"/>
            <div t-attf-class="form-group  col-lg-6"
                 id="div_email">
                <label t-attf-class="log_reg_label GT_Pressura_Pro_Mono col-form-label " for="email">Email</label>
                <input type="email" name="email" t-attf-class="GT_Pressura_Pro_Mono log_reg_input form-control "
                       t-att-value="partner.email"/>
            </div>
            <div t-attf-class="form-group col-lg-6"
                 id="div_phone">
                <label class="log_reg_label GT_Pressura_Pro_Mono col-form-label"
                       for="phone">
                    Phone
                </label>
                <input type="tel" name="phone"
                       t-attf-class="GT_Pressura_Pro_Mono log_reg_input form-control " t-att-value="partner.phone"/>
            </div>
            <div class="w-100"/>
            <div t-attf-class="form-group  col-lg-12 div_street">
                <label class="log_reg_label GT_Pressura_Pro_Mono col-form-label"
                       for="street">
                    Street
                    <span class="d-none d-md-inline">and
                        Number
                    </span>
                </label>
                <input type="text" name="street"
                       t-attf-class="GT_Pressura_Pro_Mono log_reg_input form-control " t-att-value="partner.street"
                />
            </div>
            <div t-attf-class="form-group  col-lg-12 div_street2">
                <label class="log_reg_label GT_Pressura_Pro_Mono col-form-label label-optional"
                       for="street2">Street 2
                </label>
                <input type="text" name="street2"
                       t-attf-class="GT_Pressura_Pro_Mono log_reg_input form-control " t-att-value="partner.street2"
                />
            </div>
            <div class="w-100"/>


            <div t-attf-class="form-group col-md-4 div_zip">
                <label class="log_reg_label GT_Pressura_Pro_Mono col-form-label label-optional"
                       for="zip">Zip Code
                </label>
                <input type="text" name="zip"
                       t-attf-class="GT_Pressura_Pro_Mono log_reg_input form-control" t-att-value="partner.zip"
                />
            </div>

            <div t-attf-class="form-group  col-md-8 div_city">
                <label class="log_reg_label GT_Pressura_Pro_Mono col-form-label"
                       for="city">
                    City
                </label>
                <input type="text" name="city"
                       t-attf-class="GT_Pressura_Pro_Mono log_reg_input form-control " t-att-value="partner.city"
                />
            </div>

            <div class="w-100"/>
            <div t-attf-class="form-group col-lg-6 div_country">
                <label class="col-form-label" for="country_id">Country</label>
                <select id="country_id" name="country_id" t-attf-class="form-control and 'is-invalid' or ''}">
                    <option value="">Country...</option>
                    <t t-foreach="countries" t-as="c">
                        <option t-att-value="c.id" t-att-selected="c.id == (country and country.id or -1)">
                            <t t-esc="c.name"/>
                        </option>
                    </t>
                </select>
            </div>
            <div t-attf-class="form-group col-lg-6 div_state"
                 t-att-style="(not country or not country.state_ids) and 'display: none'">
                <label class="col-form-label" for="state_id">State / Province</label>
                <select name="state_id" t-attf-class="form-control" data-init="1">
                    <option value="">State / Province...</option>
                    <t t-foreach="country_states" t-as="s">
                        <option t-att-value="s.id" t-att-selected="s.id">
                            <t t-esc="s.name"/>
                        </option>
                    </t>
                </select>
            </div>
            <div class="w-100"/>
        </div>
        <style>
            .card-body{
            background-color:whitesmoke !important;
            font-family: "GT Pressura Pro Mono" !important;
            }
            .card{
            border:0px solid;
            }
        </style>
    </template>

    <template id="my_account_address_kanban" name="Kanban address">
        <form action="/shop/checkout" method="POST" class="d-none">
            <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
            <input type="hidden" name="partner_id" t-att-value="contact.id"/>
            <t t-if='edit_billing'>
                <input type="hidden" name="callback" value="/shop/checkout?use_billing"/>
            </t>
            <input type='submit'/>
        </form>
        <div t-attf-class="card #{selected and 'border border-primary' or 'js_change_shipping'}">
            <t t-set="partner_id" t-value="contact.id"/>
