                            <label class="log_reg_label GT_Pressura_Pro_Mono"
                                   for="new_email">E-mail
                            </label>
                            <input type="email" placeholder="email" name="new_email"
                                   t-attf-class="form-control new_email login_input log_reg_input GT_Pressura_Pro_Mono"
