<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.organize</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="Organize" string="Organize" data-key="organize" groups="organize.group_organize_manager">
                    <h2>Publish &amp; Send Configuration</h2>
                    <div class="row mt16 o_settings_container" name="reject_day">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="is_whatsapp_send_msg"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="is_whatsapp_send_msg"/>
                                <div class="text-muted">
                                </div>
                            </div>
                        </div>

                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="is_sms_send_msg"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="is_sms_send_msg"/>
                                <div class="text-muted">
                                </div>
                            </div>
                        </div>

                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="is_mail_send_msg"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="is_mail_send_msg"/>
                                <div class="text-muted">
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>