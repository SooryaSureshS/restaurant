<?xml version="1.0" encoding="UTF-8"?>
<odoo>

	<template id="wineshop_blog_page_banner" inherit_id="website_blog.blog_post_short">
		<xpath expr="//div[@id='o_wblog_blog_top']" position="before">
			<section class="blog-page-banner pt128 pb128 bg-secondary">
				<div class="container">
					<div class="content text-center">
						<p class="subtitle text-primary">Our</p>
						<h1 class="text-white">Blog</h1>
						<p><a href="/" class="text-white-50">Home</a></p>
					</div>
				</div>
			</section>
		</xpath>
	</template>

	<template id="eurosec_blog_loop" inherit_id="website_blog.posts_loop">
		<xpath expr="//t[@t-if='opt_blog_readable']//t[@t-if='opt_blog_sidebar_show']" position="attributes">
			<attribute name="t-value">'col-md-12'</attribute>		
		</xpath>
	</template>

</odoo>