<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<template id="theme_wineshop_assets"
		name="Theme WineShop Assets" inherit_id="website.assets_frontend">
		<xpath expr="." position="inside">

			<link rel="stylesheet" type="text/css" href="/theme_wineshop/static/src/css/style.css"/>

			<link rel="stylesheet" type="text/scss"
				href="/theme_wineshop/static/src/scss/common.scss"/>
			<link rel="stylesheet" type="text/scss"
				href="/theme_wineshop/static/src/scss/customise_model.scss"/>
			<link rel="stylesheet" type="text/scss"
				href="/theme_wineshop/static/src/scss/homepage.scss"/>
			<link rel="stylesheet" type="text/scss"
				href="/theme_wineshop/static/src/scss/whisky_homepage.scss"/>
			<link rel="stylesheet" type="text/scss"
				href="/theme_wineshop/static/src/scss/vodka_homepage.scss"/>
			<link rel="stylesheet" type="text/scss"
				href="/theme_wineshop/static/src/scss/our_wine.scss"/>
			<link rel="stylesheet" type="text/scss"
				href="/theme_wineshop/static/src/scss/estate.scss"/>
			<link rel="stylesheet" type="text/scss"
				href="/theme_wineshop/static/src/scss/restaurant.scss"/>
			<link rel="stylesheet" type="text/scss"
				href="/theme_wineshop/static/src/scss/header.scss"/>
			<link rel="stylesheet" type="text/scss"
				href="/theme_wineshop/static/src/scss/footer.scss"/>
			<link rel="stylesheet" type="text/scss"
				href="/theme_wineshop/static/src/scss/shop_page.scss"/>
			<link rel="stylesheet" type="text/scss"
				href="/theme_wineshop/static/src/scss/product_page.scss"/>
			<link rel="stylesheet" type="text/scss"
				href="/theme_wineshop/static/src/scss/blog.scss"/>

			<!-- js -->
			<script>
				function myFunction() {
					  $(".search-box").addClass("open");
					}
			</script>
			<script type="text/javascript"
				src="/theme_wineshop/static/src/js/custom_config.js" />
			
		</xpath>
	</template>

	<template id="theme_customize_options"
		inherit_id="website._assets_primary_variables">
		<xpath expr="//link" position="after">
			<link rel="stylesheet" type="text/scss"
				href="/theme_wineshop/static/src/scss/theme_variable.scss"/>
			<link rel="stylesheet" type="text/scss"
				href="/theme_wineshop/static/src/scss/customise_variables.scss"/>
		</xpath>
	</template>

	<template id="bizople_theme_common_asset_frontend" inherit_id="website.assets_frontend" name="Bizople Theme Assets">
        <xpath expr="//link[last()]" position="after">
            <link href="/theme_wineshop/static/src/css/owl.carousel.css" rel="stylesheet" type="text/css"/>
            <link href="/theme_wineshop/static/src/css/ion.rangeSlider.css" rel="stylesheet" type="text/css"/>
			<link href="/theme_wineshop/static/src/css/ion.rangeSlider.skinHTML5.css" rel="stylesheet" type="text/css"/>
            <link href="/theme_wineshop/static/src/scss/pro_slider.scss" rel="stylesheet" type="text/scss"/>
            <link href="/theme_wineshop/static/src/scss/product_slider.scss" rel="stylesheet" type="text/scss"/>

        </xpath>
        <xpath expr="//script[last()]" position="after">
            <script  src="/theme_wineshop/static/src/js/owl.carousel.min.js" type="text/javascript"></script>
           <script type="text/javascript" src="/theme_wineshop/static/src/js/ion.rangeSlider.min.js" />
            <script src="/theme_wineshop/static/src/js/bizcommon_fronted.js" type="text/javascript"/>
        	<script type="text/javascript" src="/theme_wineshop/static/src/js/type.js" />
        </xpath>
    </template>
    
    <template id="bizople_theme_common_assets_editor" inherit_id="website.assets_editor" name="Bizople Theme Editor Assets">
        <xpath expr="." position="inside">
            <script src="/theme_wineshop/static/src/js/bizcommon_editor.js" type="text/javascript"/>
        </xpath>
    </template>

</odoo>