<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="view_product_category_form_company">
            <field name="name">product.category.form.company</field>
            <field name="model">product.category</field>
            <field name="inherit_id" ref="product.product_category_form_view"/>
            <field name="arch" type="xml">
                <field name="parent_id" position="after">
                    <field name="company_id"/>
                </field>
            </field>
        </record>

        <record model="ir.ui.view" id="view_product_pos_category_form_company">
            <field name="name">product.pos.category.form.company</field>
            <field name="model">pos.category</field>
            <field name="inherit_id" ref="point_of_sale.product_pos_category_form_view"/>
            <field name="arch" type="xml">
                <field name="parent_id" position="after">
                    <field name="company_id"/>
                </field>
            </field>
        </record>
    </data>
</odoo>
