        <menuitem action="action_website_loyalty_management"
          id="menu_website_loyalty_management_submenu"
          name="Loyalty Rules" parent="menu_website_loyalty_management_root"
          sequence="1" />
        <menuitem action="action_WkLoyaltyRedeemHistory"
          id="menu_WkLoyaltyBenefitsHistory_menu"
