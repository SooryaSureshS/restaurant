                                        <tree editable="bottom">
                                            <field name="name"/>
                                            <field name="point_start"/>
                                            <field name="point_end"/>
                                            <field name="product_ids" widget="many2many_tags"/>

                                        </tree>
                                        </field>


                                    </div>
                                </group>
