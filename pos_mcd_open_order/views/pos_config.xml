<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_mcd_open_orders_pos_config" model="ir.ui.view">
        <field name="name">pos.config.inherited</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='iface_invoicing']" position="after">
                <div class="col-12 col-lg-6 o_setting_box" id="docket_break">
                    <div class="o_setting_left_pane">
                        <field name="docket_category_break"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="docket_category_break"/>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>